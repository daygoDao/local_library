<%- include('layout.ejs') %>
<main>
  <h1>Author: <%= author.name %></h1>
  <p>
    <%= author.lifespan %> 
  </p>

  <section>
    <h4>Books</h4>
    <dl>
      <% if (author_books == 0) { %> 
        <p>This author has no books.</p>
      <% } %>
      <% for(let book of author_books) { %>
        <dt>
          <a href=<%= book.url %>> <%= book.title %></a>
        </dt>
        <dd><%= book.summary %></dd>
      <% } %>
    </dl>
  </section>

  <hr>
  <p><a href=<%= author.url + '/delete' %>>Delete author</a></p>
  <p><a href=<%= author.url + '/update' %>>Update author</a></p>
</main>
