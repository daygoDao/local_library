<%- include('layout.ejs') %>
<main>
  <h1>Author: <%= author.name %></h1>
  <p>
    <%= author.date_of_birth == null ? '???' : author.birth_formatted %> 
    - 
    <%= author.date_of_death == null ? '???' : author.death_formatted %>
  </p>

  <section>
    <h4>Books</h4>
    <dl>
      <% if (author_books == 0) { %> 
        <p>This author has no books.</p>
      <% } %>
      <% for(let book of author_books) { %>
        <dt>
          <a href=<%= book.url %>> <%= book.title %></a>
        </dt>
        <dd><%= book.summary %></dd>
      <% } %>
    </dl>
  </section>
</main>
