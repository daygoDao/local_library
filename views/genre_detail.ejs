<%- include('layout.ejs') %>
<main>
  <h1>Genre: <%= genre.name %></h1>
  <h4>Books</h4>
  <dl>
    <% if (genre_books.length == 0) { %>
    <p>This genre has no books</p>
    <% } else { %> <% for(let book of genre_books) { %>
    <dt>
      <a href="book.url"><%= book.title %></a>
      <p><%= book.summary %></p>
    </dt>
    <% }} %>
  </dl>
  <p><a href=<%= genre.url + "/update"%>>Update Genre</a></p>
  <p><a href=<%= genre.url + "/delete"%>>Delete Genre</a></p>
</main>
